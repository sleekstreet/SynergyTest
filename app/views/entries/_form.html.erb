<%= form_for(@entry) do |f|  %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <div class="row">
    <div class="col-md-6 pl-0">
      <%= f.label :firstName, "*First Name" %><br>
      <%= f.text_field :firstName %>
    </div>
    <div class="col-md-6 pr-0">
      <%= f.label :lastName, "Last Name" %><br>
      <%= f.text_field :lastName %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 pl-0">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
    <div class="col-md-4 pr-0">
      <%= f.label :apt %><br>
      <%= f.text_field :apt %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 pl-0">
      <%= f.label :city %><br>
      <%= f.text_field :city %>
    </div>
    <div class="col-md-3">
      <%= f.label :state %><br>
      <%= select_tag(:state, 
        options_for_select([["Alabama", "AL"], ["Alaska", "AK"], ["Arizona", "AZ"], ["Arkansas", "AR"],["California", "CA"],["Colorado", "CO"],["Connecticut", "CT"], ["Delaware", "DE"],["Florida", "FL"], ["Georgia", "GA"], ["Hawaii", "HI"], ["Idaho", "ID"], ["Illinois", "IL"], ["Indiana", "IN"], ["Iowa", "IA"], ["Kansas", "KS"], ["Kentucky", "KY"],["Louisiana","KY"],["Maine","ME"],["Maryland", "MD"],["Massachusetts", "MA"],["Michigan","MI"],["Minnesota","MN"],["Mississippi", "MS"],["Missouri", "MO"],["Montana","MT"],["Nebraska","NE"],["Nevada","NV"],["New Hampshire", "NH"],["New Jersey","NJ"],["New Mexico", "NM"],["New York", "NY"],["North Carolina", "NC"],["North Dakota","ND"],["Ohio", "OH"],["Oklahoma","OK"],["Oregon","OR"],["Pennsylvania", "PA"],["Rhode Island", "RI"],["South Carolina", "SC"],["South Dakota", "SD"],["Tennessee", "TN"],["Texas","TX"],["Utah","UT"],["Vermont","VT"],["Virginia", "VA"],["Washington","WA"],["West Virgina","WV"],["Wisconsin", "WI"],["Wyoming","WY"]]))%>
    </div> 
    <div class="col-md-3 pr-0">
      <%= f.label :zip %><br>
      <%= f.text_field :zip %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 pl-0">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="col-md-6 pr-0">
      <%= f.label :email, "Email confirmation" %><br>
      <%= f.text_field :email %>
    </div>
  </div>
  </fieldset>
  <fieldset>
  <div class="card-deck">
    <div class="card">
      <div class="card-body new_entry__box new_entry--lgGrey">
        <p>* I Plan on purchasing my next vehicle within</p>
        <%= f.radio_button(:purchTime, "1Month") %>
        <%= f.label(:purchTime_1Month, "1 Month") %><br/>
        <%= f.radio_button(:purchTime, "3Month") %>
        <%= f.label(:purchTime_3Month, "1-3 Month") %><br/>
        <%= f.radio_button(:purchTime, "6Month") %>
        <%= f.label(:purchTime_6Month, "4-6 Month") %><br/>
        <%= f.radio_button(:purchTime, "12Month") %>
        <%= f.label(:purchTime_12Month, "7-12 Month") %><br/>      
        <%= f.radio_button(:purchTime, "1year") %>
        <%= f.label(:purchTime_1year, "More than 1 Year") %>      
      </div>
    </div>
    <div class="card">
      <div class="card-body new_entry__box new_entry--lgGrey">
        <p>*I am interested in the following Vehicles</p>
        <%= f.check_box :interest_LEAF %>
        <%= f.label :interest_LEAF, "LEAF" %><br>
        <%= f.check_box :interest_Kicks %>
        <%= f.label :interest_Kicks, "Kicks" %><br>
        <%= f.check_box :interest_RogueSport %>
        <%= f.label :interest_RogueSport, "Rogue Sport" %><br>
        <%= f.check_box :interest_Rogue %>
        <%= f.label :interest_Rogue, "Rogue" %><br>
      </div>
    </div>
  </div>
    <div class="new_entry__box new_entry--lgGrey mt-3">
      <p>*How likely would you be to consider Nissan for your next new vehicle purchase?</p>
      <%= f.radio_button(:possPurch, "Definitely") %>
      <%= f.label(:possPurch, "Definitely would consider") %><br/>
      <%= f.radio_button(:possPurch, "Probably") %>
      <%= f.label(:possPurch, "Probably would consider") %><br/>
      <%= f.radio_button(:possPurch, "might") %>
      <%= f.label(:possPurch, "Might or might not consider") %><br/>
      <%= f.radio_button(:possPurch, "Probably_not") %>
      <%= f.label(:possPurch, "Probably would not consider") %><br/>
      <%= f.radio_button(:possPurch, "Definitely_not") %>
      <%= f.label(:possPurch, "Definitely would not consider") %>
    </div>
    <div class="row new_entry__box new_entry--lgGrey">
      <p>*What is your overall opinion of Nissan?</p>
      <div>
        <table>
          <thead>
            <th></th>
            <th><%= f.label(:opinion_10, "10") %></th>
            <th><%= f.label(:opinion_9, "9") %></th>
            <th><%= f.label(:opinion_8, "8") %></th>
            <th><%= f.label(:opinion_7, "7") %></th>
            <th><%= f.label(:opinion_6, "6") %></th>
            <th><%= f.label(:opinion_5, "5") %></th>
            <th><%= f.label(:opinion_4, "4") %></th>
            <th><%= f.label(:opinion_3, "3") %></th>
            <th><%= f.label(:opinion_2, "2") %></th>
            <th><%= f.label(:opinion_1, "1") %></th>
            <th><%= f.label(:opinion_0, "0") %></th>
            <th></th>
          </thead>
          <tbody>
            <td>Excellent</td>
            <td><%= f.radio_button(:opinion, "10") %></td>
            <td><%= f.radio_button(:opinion, "9") %></td>
            <td><%= f.radio_button(:opinion, "8") %></td>
            <td><%= f.radio_button(:opinion, "7") %></td>
            <td><%= f.radio_button(:opinion, "6") %></td>
            <td><%= f.radio_button(:opinion, "5") %></td>
            <td><%= f.radio_button(:opinion, "4") %></td>
            <td><%= f.radio_button(:opinion, "3") %></td>
            <td><%= f.radio_button(:opinion, "2") %></td>
            <td><%= f.radio_button(:opinion, "1") %></td>
            <td><%= f.radio_button(:opinion, "0") %></td>
            <td>Poor</td>
          </tbody>
        </table>
      </div>
    </div>
    <div class="new_entry__box new_entry--lgGrey">
      <p>*How would you like to participate in today's experience?</p>
      <%= f.radio_button(:partcipate, "drive") %> 
      <%= f.label(:partcipate_drive, "I will be driving today or may want to drive") %><br>
           
      <%= f.radio_button(:partcipate, "ride") %> 
      <%= f.label(:partcipate_ride, "I would prefer to ride today") %>
      
    </div>
  </fieldset>

  <div class="my-3 new_entry__terms">
    <h5>RELEASE OF LIABILITY AND INDEMNITY AGREEMENT AND PABLICITY AUTHORIZATION</h5>
    <div class="new_entry__box">
      <%= render "terms" %>
    </div>
  </div>

    <div class="mt-3">
      <%= f.check_box :minor %><%= f.label :minor, " I have requested that the minor(s) listed below be allowed to accompany me as a passenger" %><br>
    </div>
  
  <div class="new_entry__box">
    <canvas id="signature-pad" class="new_entry__signature-pad"></canvas>
    <%= f.label :sign %><br>
    <%= f.text_field :sign %>

  </div>
  <button id="clear">Erase</button>
  <div class="mt-3">
    
    <%= f.check_box :news %><%= f.label :news, " I would like to receive exciting product and event new from Nissan" %><br>
  </div>
  <div class="field">
    
    <%= f.check_box :dealerCont %><%= f.label :dealerCont, " I would like to be contacted by a Nissan dealer for more vehicle information." %><br>

  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => 'btn-block new_entry__submit' %>
  </div>
<% end %>
